<UserControl x:Class="MedicalAppointmentSystem.Presentation.Views.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid>
                <TextBlock Text="{Binding WelcomeMessage}" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                <Button Content="Logout" 
                        Command="{Binding LogoutCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Padding="15,8"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Create Appointment -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Create New Appointment" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <TextBlock Text="Select Doctor:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Doctors}" 
                              SelectedItem="{Binding SelectedDoctor}"
                              DisplayMemberPath="FullName"
                              Margin="0,0,0,15"
                              Padding="8"/>

                    <TextBlock Text="Select Patient:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Patients}" 
                              SelectedItem="{Binding SelectedPatient}"
                              DisplayMemberPath="FullName"
                              Margin="0,0,0,15"
                              Padding="8"/>

                    <TextBlock Text="Select Date:" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" 
                                Margin="0,0,0,20"
                                Padding="8"/>

                    <Button Content="Create Appointment" 
                            Command="{Binding CreateAppointmentCommand}"
                            Background="#27AE60"
                            Foreground="White"
                            Padding="15,10"
                            FontSize="14"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="#27AE60" 
                               Margin="0,15,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Right Panel - Appointments List -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="All Appointments" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding Appointments}" BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" Width="150">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ScheduledAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Doctor" DisplayMemberBinding="{Binding Doctor.FullName}" Width="150"/>
                                <GridViewColumn Header="Patient" DisplayMemberBinding="{Binding Patient.FullName}" Width="150"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
