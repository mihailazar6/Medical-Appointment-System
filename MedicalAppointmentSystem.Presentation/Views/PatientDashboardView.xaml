<UserControl x:Class="MedicalAppointmentSystem.Presentation.Views.PatientDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>
    
    <Grid Background="#F0E6FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#8E44AD">
            <Grid>
                <TextBlock Text="{Binding WelcomeMessage}" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>
                <Button Content="Logout" 
                        Command="{Binding LogoutCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Padding="15,8"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - My Appointments -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="My Appointments" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding MyAppointments}" 
                              SelectedItem="{Binding SelectedAppointment}"
                              BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" Width="140">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ScheduledAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Doctor" DisplayMemberBinding="{Binding Doctor.FullName}" Width="150"/>
                                <GridViewColumn Header="Status" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="Completed"/>
                                                        <Setter Property="Foreground" Value="#27AE60"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Consultation}" Value="{x:Null}">
                                                                <Setter Property="Text" Value="Scheduled"/>
                                                                <Setter Property="Foreground" Value="#3498DB"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Border>

            <!-- Right Panel - Consultation Details -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Consultation Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                    <StackPanel Visibility="{Binding HasConsultation, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Diagnosis:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                            <TextBlock Text="{Binding SelectedConsultationDiagnosis}" TextWrapping="Wrap"/>
                        </Border>

                        <TextBlock Text="Treatment:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Border Background="#F8F9FA" CornerRadius="4" Padding="10">
                            <TextBlock Text="{Binding SelectedConsultationTreatment}" TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <TextBlock Text="Select an appointment to view consultation details." 
                               Foreground="#999"
                               Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedAppointment}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Text="No consultation yet for this appointment." 
                               Foreground="#E67E22"
                               Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedAppointment}" Value="{x:Null}"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding HasConsultation}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
